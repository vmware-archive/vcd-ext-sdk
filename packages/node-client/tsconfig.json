{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "target": "ES6",
    "strict": false,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "lib": ["dom", "es6", "es5", "dom.iterable", "scripthost"],
    "outDir": "lib",
    "typeRoots": [
        "node_modules/@types"
    ]
},
  "include": [
    "src/**/*"
  ]
}
