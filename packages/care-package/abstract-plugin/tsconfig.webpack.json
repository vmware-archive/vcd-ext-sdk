{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "module": "esnext",
    "outDir": "lib/esnext",
    "rootDir": "src",
    "strict": false,
    "target": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
