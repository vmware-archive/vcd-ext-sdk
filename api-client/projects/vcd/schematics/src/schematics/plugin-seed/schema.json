{
    "$schema": "http://json-schema.org/schema",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What is the name of your plugin?"
        },
        "vcdVersion": {
            "type": "string",
            "minLength": 3,
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "For which vCloud Director version?"
        }
    },
    "required": [
        "name",
        "vcdVersion"
    ]
}