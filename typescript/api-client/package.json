{
  "name": "@vcd/sdk",
  "version": "0.9.0",
  "scripts": {
    "clean": "rimraf build && rimraf dist",
    "test": "karma start --single",
    "test-watch": "karma start --auto-watch --no-single-run --browsers Chrome",
    "copy-metadata": "cpy package.dist.json dist --rename=package.json",
    "build": "yarn run clean && ngc && ncp build/ dist/ && yarn run copy-metadata",
    "mvn:compile": "ngc -p ./tsconfig.mvn.json",
    "mvn:test": "karma start --single",
    "mvn:prepare-package": "ncp target/build/ target/dist/ && cpy package.dist.json target/dist --rename=package.json",
    "mvn:deploy": "cpy .npmrc.dist . --rename=.npmrc && npm publish target/dist --access public && rimraf .npmrc"
  },
  "author": "VMware",
  "license": "BSD-2-Clause",
  "dependencies": {
    "@vcd/bindings": "9.1.1"
  },
  "devDependencies": {
    "@angular/common": "4.3.0",
    "@angular/compiler": "4.3.0",
    "@angular/compiler-cli": "4.3.0",
    "@angular/core": "4.3.0",
    "@angular/platform-browser": "4.3.0",
    "@angular/platform-browser-dynamic": "4.3.0",
    "@ngrx/core": "1.2.0",
    "@ngrx/store": "2.2.2",
    "@types/jasmine": "2.5.47",
    "@types/jasmine-ajax": "3.1.37",
    "@types/node": "8.10.34",
    "cpy-cli": "2.0.0",
    "jasmine-ajax": "3.4.0",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "3.2.0",
    "karma": "1.6.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.1.0",
    "karma-mocha-reporter": "2.2.3",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.4",
    "ncp": "2.0.0",
    "puppeteer": "0.11.0",
    "rimraf": "2.6.2",
    "rxjs": "5.5.3",
    "source-map-loader": "0.2.0",
    "ts-loader": "3.5.0",
    "typescript": "2.4.2",
    "webpack": "3.5.5",
    "webpack-concat-plugin": "1.4.0",
    "zone.js": "0.8.5"
  }
}
